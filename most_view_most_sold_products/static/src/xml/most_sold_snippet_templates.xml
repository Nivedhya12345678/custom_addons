<?xml version="1.0" encoding="UTF-8" ?>
<templates>
    <t t-name="most_view_most_sold_products.most_sold_products">
        <div class="container carousel slide" data-bs-ride="carousel" t-att-data-bs-interval="interval"
             t-attf-id="most_carousel1_{{unique}}">
            <div class="carousel-inner row w-100 mx-auto" role="listbox">
                <t t-foreach="products" t-as="chunk" t-key="chunk.id">
                    <div t-att-class="chunk.is_active ? 'carousel-item active' : 'carousel-item'">
                        <div class="row">
                            <t t-foreach="chunk" t-as="item" t-key="item.id">
                                <div class="block span3 col-3">
                                    <div class="card-group">
                                        <div class="card">
                                            <img class="card-img-top" t-attf-src="data:image/png;base64,{{item.image_1920}}"
                                             	style="padding: 0px; margin: 0px; height: 160px; width:305px;"/>
                                            <h5 class="mb-0"><t t-esc="item.name"/>:<t t-esc="item.sales_count"/></h5>
                                            <a t-attf-href="/shop/{{item.id}}" class="btn btn-primary">
                                            	Goto Product
                                        	</a>
                                        </div>
                                    </div>
                                </div>
                        	</t>
                    	</div>
                	</div>
                </t>
            </div>
        </div>
        <a t-attf-href="#most_carousel1_{{unique}}" class="carousel-control-prev" data-bs-slide="prev" role="button" aria-label="Previous" title="Previous"
        style="color: red; visibility: visible;">
            <span class="fa fa-chevron-circle-left fa-2x"/>
            <span class="visually-hidden">Previous</span>
    	</a>
        <a t-attf-href="#most_carousel1_{{unique}}" class="carousel-control-next" data-bs-slide="next" role="button" aria-label="Next" title="Next"
         style="color: red; visibility: visible;">
        	<span class="fa fa-chevron-circle-right fa-2x"/>
        	<span class="visually-hidden-focusable">Next</span>
    	</a>
    </t>
</templates>

