<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="mail_template_stock_report" model="mail.template">
            <field name="name">Email Template</field>
            <field name="model_id" ref="stock.model_stock_quant"/>
            <field name="email_from">{{object.company_id.email}}</field>
            <field name="email_to">{{object.env['res.users'].search( [ ('groups_id.name','=','Administrator'),
                                    ('groups_id.category_id.name','=','Inventory') ] ).email}}</field>
            <field name="subject">{{ object.company_id.name }} Stock report </field>
            <field name="body_html" type="html">
                <div style="margin: 0px; padding: 0px;">
                    <div style="justify-content: center;background-color: #714B67; padding:0.6rem;padding-left: 35px;text-decoration: none; color: #fff; border-radius: 5px; font-size:13px;width:40%">
                        <h2>
                            Team,
                        </h2>
                        <div>
                            <h3>
                                Stock report from YourCompany.
                            </h3>
                        </div>
                    </div>
                    <br/>
                    <br/>
                    Regards,
                    <br/>
                    <t t-out="object.company_id.name"/>
                    <br/>
                </div>
            </field>
        </record>
    </data>
</odoo>