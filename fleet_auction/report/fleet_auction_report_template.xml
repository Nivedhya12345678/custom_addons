<?xml version="1.0" encoding="utf-8"?>
<odoo>
   <template id="fleet_auction_report">
       <t t-call="web.html_container">
           <t t-call="web.external_layout">
               <div class="page">
                   <div class="oe_structure"/>
                   <h2>Fleet Report</h2>
                   <br/>
                   <td>Print date :</td>
                   <span t-esc="time.strftime('%Y-%m-%d')"/>
                   <div>
                       <t t-if="customer">
                           <span>Customer Name :</span>
                           <t t-esc="data['customer']"/>
                       </t>
                   </div>
                   <div>
                       <t t-if="state">
                           <span>State :</span>
                           <t t-esc="data['state']"/>
                       </t>
                   </div><br/>
               </div>
               <table class="table table-sm table-bordered">
                   <thead>
                       <tr>
                           <th class="text-center"><span>Sl.No</span></th>
                           <th class="text-center"><span>Fleet Name</span></th>
                           <t t-if="not customer">
                           <th class="text-center"><span>Customer Name</span></th>
                           </t>
                           <th class="text-center"><span>Start date</span></th>
                           <th class="text-center"><span>End date</span></th>
                           <th class="text-center"><span>Current asset value</span></th>
                           <t t-if="not state">
                           <th class="text-center"><span>State</span></th>
                           </t>
                           <th class="text-center"><span>Bid amount</span></th>
                           <th class="text-center"><span>Won price</span></th>
                       </tr>
                       <t t-set="j" t-value="1" />
                       <t t-foreach="docs" t-as="i">
                       <tr>
                           <td>
                               <span t-esc="j"/>
                               <t t-set="j" t-value="j+1"/>
                           </td>
                           <td>
                               <span t-esc="i['vehicle']"/>
                           </td>
                           <t t-if="not customer">
                           <td>
                               <span t-esc="i['name']"/>
                           </td>
                           </t>
                           <td>
                               <span t-esc="i['start_date']"/>
                           </td>
                           <td>
                               <span t-esc="i['end_date']"/>
                           </td>
                           <td>
                               <span t-esc="i['current_value']"/>
                           </td>
                           <t t-if="not state">
                           <td>
                               <span t-esc="i['state']"/>
                           </td>
                           </t>
                           <td>
                               <span t-esc="i['bid_amount']"/>
                           </td>
                           <td>
                               <span t-esc="i['won_price']"/>
                           </td>
                       </tr>
                       </t>
                   </thead>
               </table>
           </t>
       </t>
   </template>
</odoo>