<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="fleet_cancel_action" model="ir.actions.act_window">
    <field name="name">Cancel Reason</field>
    <field name="res_model">fleet.cancel.wizard</field>
    <field name="view_mode">tree,form</field>
    </record>

    <record id="fleet_cancel_view_form" model="ir.ui.view">
            <field name="name">fleet.cancel.form</field>
            <field name="model">fleet.cancel.wizard</field>
            <field name="arch" type="xml">
                <form string="Auction Cancel">
                    <field name="cancel_id" invisible="1"/>
                       <group>
                        <field name="cancel_reason_id" options="{'no_create_edit': True}" />
                       </group>
                    <footer>
                        <button name="action_cancel_reason" string="Mark as Cancel" type="object" class="btn-primary"/>
                        <button string="Discard" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
    </record>
</odoo>


