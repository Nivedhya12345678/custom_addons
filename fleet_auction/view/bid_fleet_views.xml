<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="bid_fleet_action" model="ir.actions.act_window">
    <field name="name">Bid</field>
    <field name="res_model">bid.fleet</field>
    <field name="view_mode">tree,form</field>
    </record>
    <record id="bid_fleet_view_tree" model="ir.ui.view">
        <field name="name">bid.fleet.view.tree</field>
        <field name="model">bid.fleet</field>
        <field name="arch" type="xml">
            <tree string="Channel">
                <field name="auction_id"/>
                <field name="customer_id"/>
                <field name="bid_amount"/>
                <field name="bid_price"/>
                <field name="bid_date"/>
                <field name="state"/>
            </tree>
        </field>
    </record>
    <record id="bid_fleet_view_form" model="ir.ui.view">
        <field name="name">bid.fleet.view.form</field>
        <field name="model">bid.fleet</field>
        <field name="arch" type="xml">
            <form string="Test">
                 <header>
                        <button name="action_confirm"  string="Confirm"  type="object" invisible="state not in ('draft')"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,confirmed" options="{'clickable': '1'}"/>
                 </header>
                <sheet>
                    <group>
                        <group>
                            <field name="auction_id" options="{'no_create': True, 'no_create_edit':True}"/>
                            <field name="customer_id"/>
                            <field name="bid_price"/>
                            <field name="phone"/>
                        </group>
                        <group>
                            <field name="bid_date"/>
                            <field name="bid_amount"/>
                        </group>
                    </group>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </sheet>
            </form>
        </field>
    </record>
    <record id="bid_fleet_search" model="ir.ui.view">
            <field name="name">bid.fleet.search</field>
            <field name="model">bid.fleet</field>
            <field name="arch" type="xml">
                <search string="new_search">
                    <field name="customer_id"/>
                    <group expand="0" string="Group By">
                        <filter string="Customer" name="customer_id" context="{'group_by': 'customer_id'}"/>
                    </group>
                </search>
            </field>
    </record>
</odoo>