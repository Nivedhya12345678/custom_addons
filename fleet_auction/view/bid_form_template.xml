<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="bid_form_template">
           <t t-call="website.layout">
               <div id="wrap" class="oe_structure oe_empty">
                   <header class="detail_header">Auction Form</header><br/>
                   <form action="/bid_form/submit" method="post">
                       <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                       <label class="bid_form">
                               <input type="hidden" name="name"  class="number" id="number"/>
                       </label><br/><br/>
                       <label class="bid_form">Customer name:
                           <input type="text" name="customer" t-att-value="user"/>
                       </label><br/><br/>
                       <label class="bid_form">Bid date:
                           <input type="date" class="date" name="date" required= "true"/>
                       </label><br/><br/>
                       <label class="bid_form">Bid amount:
                           <input type="text" class="bid_amount" name="amount" id="amount" required= "true"/>
                       </label><br/><br/>
                       <div class="submit_button">
                           <a href="/thank_you_page">
                           <button type="submit" t-att-value="auction" id="button">Submit</button>
                           </a>
                       </div>
                   </form>
               </div>
           </t>
    </template>
</odoo>